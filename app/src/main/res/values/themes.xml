<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anya" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_900</item>
        <item name="colorSecondaryVariant">@color/pink_900</item>
        <item name="colorOnSecondary">@color/pink_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <!-- Layout -->
    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorOnPrimary">@color/gray_800</item>
    </style>

    <!-- Date Picker Style -->
    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- Font. -->
    <style name="Layout.InterRegular">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="InterMedium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Layout.InterMedium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>


    <style name="Layout.InterSemiBold">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Layout.InterBold">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Layout.InterExtraBold">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>


</resources>